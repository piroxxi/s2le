<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:fr.piroxxi.s2le.client.asside">

	<ui:style>
		.cadre {
			position: relative;
		}
		
		.title {
			font-size: 15px;
			font-style: italic;
		}
		
		.advise {
			text-align: justify;
			margin: 8px;
			margin-bottom: 16px;
		}
		
		.advise:first-letter {
			margin-left: 15px;
		}
		
		.button {
			position: absolute;
			right: -11px;
			bottom: -23px;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.cadre}">
		<g:Label styleName="{style.title}">Did you know?</g:Label>
		<g:Label ui:field="advise" styleName="{style.advise}" />
		<g:Button ui:field="enSavoirPlus" styleName="button_link {style.button}">En savoir plus</g:Button>
	</g:HTMLPanel>
</ui:UiBinder>