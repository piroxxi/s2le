	<ui:style>
		.questionPanel {
			border: 1px solid #AFC651;
			padding: 20px;
			-moz-border-radius: 15px;
			border-radius: 15px;
			background-color: rgba(0, 0, 0, 0.03); <!--
			background: -webkit-gradient(linear, left top, left bottom, from(#918B85),
				to(#42392E) );
			-->
		}
	</ui:style>

	<g:HTMLPanel>
		<g:HorizontalPanel>
			<g:Label>Nous
				sommes entrain de faire le test&nbsp;
			</g:Label>
			<g:Label ui:field="testName" />
		</g:HorizontalPanel>
		<br />
		<g:SimplePanel styleName="{style.questionPanel}"
			ui:field="question" />
		<br />
		<g:HorizontalPanel>
			<g:Label>Nous
				en sommes Ã  la question&nbsp;
			</g:Label>
			<g:Label ui:field="testAvancement" />
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
