<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:VerticalPanel>
		<g:Label ui:field="question" />
		<g:HorizontalPanel ui:field="answers">
			<g:Button ui:field="yes">yes</g:Button>
			<g:Button ui:field="no">no</g:Button>
		</g:HorizontalPanel>
		<g:Label ui:field="error" />
		<g:Button ui:field="next">next</g:Button>
	</g:VerticalPanel>
</ui:UiBinder>